<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MarvelBase" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/marvelRed</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="DetailWhiteBig" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DetailWhiteNormal" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardName" parent="Theme.AppCompat.Light">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailBlack" parent="Theme.AppCompat.Light">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryButton" parent="Theme.AppCompat.Light">
        <item name="android:backgroundTint">@color/marvelRed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>



</resources>